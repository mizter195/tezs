<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pokemon.pokedex.fragments.DetailsFragment"
    android:padding="@dimen/padding_fragment"
    android:background="@color/color_blue">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classification :"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type(s) :"
        android:id="@+id/textView3"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weaknesses :"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Weight :"
        android:id="@+id/textView5"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Height :"
        android:id="@+id/textView6"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/tv_name"
        android:textSize="20sp"
        android:textColor="@color/color_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="class"
        android:id="@+id/tv_class"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="types"
        android:id="@+id/tv_types"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weakness"
        android:id="@+id/tv_weakness"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/tv_class" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avg weight"
        android:id="@+id/tv_avg_weight"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avg height"
        android:id="@+id/tv_avg_heigt"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
