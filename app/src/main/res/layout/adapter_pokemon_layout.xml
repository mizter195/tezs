<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_pokemon"
        android:src="@drawable/poke_001"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_pokemon"
        android:padding="@dimen/padding_list_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#001"
            android:id="@+id/tv_number"
            android:layout_marginLeft="0dp"
            android:textSize="16sp"
            android:textColor="@color/color_black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grass &amp; Poison"
            android:id="@+id/tv_types"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulbasaur"
            android:id="@+id/tv_name"
            android:layout_above="@+id/tv_types"
            android:layout_alignStart="@+id/tv_types"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_black" />
    </RelativeLayout>
</RelativeLayout>